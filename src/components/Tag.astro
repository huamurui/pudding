---
import { getCollection, type CollectionEntry } from 'astro:content'
import { buildUrl } from '@/utils/helpers'

type TagPostsMap = Map<string, CollectionEntry<'posts'>[]>;
const post = Astro.props.post as CollectionEntry<'posts'> | null
const posts: CollectionEntry<'posts'>[] = await getCollection('posts')
const tagsPosts: TagPostsMap = new Map()

for (const post of posts) {
  for (const tag of post.data.tags || []) {
    const existingPosts = tagsPosts.get(tag) || []
    const updatedPosts = [...existingPosts, post].sort(
      (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
    )
    tagsPosts.set(tag, updatedPosts)
  }
}

if(post){
  const postTags = post.data.tags || []
  const filteredTagsPosts: TagPostsMap = new Map()
  for (const tag of postTags) {
    if (tagsPosts.has(tag)) {
      filteredTagsPosts.set(tag, tagsPosts.get(tag)!)
    }
  }
  tagsPosts.clear()
  for (const [tag, posts] of filteredTagsPosts.entries()) {
    tagsPosts.set(tag, posts)
  }
}

const sortedTags = Array.from(tagsPosts.keys()).sort((a, b) =>
  a.localeCompare(b)
);
---

  <div class="tags-page">
    <div class="tags-nav">
      <div class="tags-container">
        {sortedTags.map((tag) => (
          <a
            href={buildUrl(['tags', tag, ''])}
            class="post-tag"
            data-tag={tag}
          >
            {tag}
            <span class="tag-count">
              {tagsPosts.get(tag)?.length || 0}
            </span>
          </a>
        ))}
      </div>
    </div>
  </div>

<style>
  .tags-nav {
    background-color: var(--bg-primary);
    padding: 8px 0;
    border-radius: 8px;
    box-shadow: 0 2px 4px var(--shadow);
  }

  .tags-toggle {
    display: none;
    width: 100%;
    padding: 8px 16px;
    background-color: var(--bg-secondary);
    border: none;
    color: var(--text-primary);
    font-size: 14px;
    cursor: pointer;
    text-align: left;
    align-items: center;
    justify-content: space-between;
    gap: 8px;
  }

  .toggle-icon {
    font-size: 12px;
  }

  .tags-container {
    display: flex;
    gap: 12px;
    padding: 8px 16px;
    overflow-x: auto;
    flex-wrap: wrap;
    scrollbar-width: thin;
  }

  .tag-count {
    background-color: var(--bg-tertiary);
    color: var(--text-secondary);
    font-size: 12px;
    padding: 1px 8px;
    border-radius: 10px;
  }
</style>